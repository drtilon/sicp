#lang sicp
(define (gcd a b)
  (if (= b 0)
      a
      (gcd b (remainder a b))))

(define (make-rat n d)
  (let ((g (gcd n d)))
    (if  (or (< d 0)
          (< n 0))
      (cons (/ (* -1 n) g) 
          (/ (* -1 d) g))
    (cons (/ n g) 
          (/ d g)))))


(define (numer x) (car x))
(define (denom x) (cdr x))
(define (add-rat x y)
  (make-rat (+ (* (numer x) (denom y))
               (* (numer y) (denom x)))
            (* (denom x) (denom y))))

(define (print-rat x)
  (newline)
  (display (numer x))
  (display "/")
  (display (denom x)))
(define one-half (make-rat -1 2))
(define one-third (make-rat 1 3))

(print-rat
 (add-rat one-half one-third))

